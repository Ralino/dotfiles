#Set screen brightness
bindsym XF86MonBrightnessUp   exec --no-startup-id                     xbacklight     +10%
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.config/i3/helper/dimbacklight.sh 10

#Audio control
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.config/i3/helper/volume-up.sh

bindsym XF86AudioLowerVolume exec --no-startup-id ~/.config/i3/helper/volume-down.sh
bindsym XF86AudioMute        exec --no-startup-id ~/.config/i3/helper/volume-mute.sh

#Audacious control
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause 
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

#Program shortcuts
