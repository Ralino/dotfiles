# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e mode "Exit?"
mode "Exit?" {
	bindsym Return exit
	bindsym Escape mode "default"
}

#Shutdown
bindsym $mod+Shift+q mode "Shutdown?"
mode "Shutdown?" {
	bindsym Return exec --no-startup-id poweroff
	bindsym Escape mode "default"
}

#Suspend to RAM
#Set to shutdown key due to bootup problems
bindsym $mod+Shift+s mode "Suspend?" 
mode "Suspend?" {
	bindsym Return exec ~/.config/i3/helper/i3lockdpms.sh $wallpaper, exec --no-startup-id systemctl suspend
	bindsym Escape mode "default", exec --no-startup-id sudo ~/.config/i3/helper/apstarter.sh
}

