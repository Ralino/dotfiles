# Should you change your keyboard layout some time, delete
# this file and re-run i3-config-wizard(1).
#

# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
#font pango:monospace 8
font pango:Droid Sans Mono 10

#Path to helper scripts
set $helper ~/.config/i3/helper

# kill focused window
bindsym $mod+q kill

#Scratchpad
bindsym $mod+c scratchpad show
bindsym $mod+Shift+c move scratchpad

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+g split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# change container layout for children
#bindsym $mod+Shift+w split v, layout tabbed FIXME

# focus the parent container
bindsym $mod+a focus parent
bindsym $mod+s focus child

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Multiscreen
bindsym $mod+p exec --no-startup-id $helper/toggle-clone.sh

# workspace names
set $workspace1 "1: Browser  "
set $workspace2 "2: Terminal  " 
set $workspace3 "3: Editor  "
set $workspace4 "4: Misc "
set $workspace5 "5: Misc "
set $workspace6 "6: Misc "
set $workspace7 "7: Misc "
set $workspace8 "8: Chat  "
set $workspace9 "9: Steam  "
set $workspace0 "10: Music  "
set $presentation "Beamer"

# switch to workspace
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5
bindsym $mod+6 workspace $workspace6
bindsym $mod+7 workspace $workspace7
bindsym $mod+8 workspace $workspace8
bindsym $mod+9 workspace $workspace9
bindsym $mod+0 workspace $workspace0
#bindsym $mod+ü workspace $presentation #FIXME

# move focused container to workspace and switch
bindsym $mod+Shift+1 move container to workspace $workspace1; workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2; workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3; workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4; workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5; workspace $workspace5
bindsym $mod+Shift+6 move container to workspace $workspace6; workspace $workspace6
bindsym $mod+Shift+7 move container to workspace $workspace7; workspace $workspace7
bindsym $mod+Shift+8 move container to workspace $workspace8; workspace $workspace8
bindsym $mod+Shift+9 move container to workspace $workspace9; workspace $workspace9
bindsym $mod+Shift+0 move container to workspace $workspace0; workspace $workspace0
#bindsym $mod+Shift+ü move container to workspace $presentation; workspace $presentation #FIXME

# move focused container to workspace and do not switch
bindsym $mod+Control+1 move container to workspace $workspace1
bindsym $mod+Control+2 move container to workspace $workspace2
bindsym $mod+Control+3 move container to workspace $workspace3
bindsym $mod+Control+4 move container to workspace $workspace4
bindsym $mod+Control+5 move container to workspace $workspace5
bindsym $mod+Control+6 move container to workspace $workspace6
bindsym $mod+Control+7 move container to workspace $workspace7
bindsym $mod+Control+8 move container to workspace $workspace8
bindsym $mod+Control+9 move container to workspace $workspace9
bindsym $mod+Control+0 move container to workspace $workspace0
#bindsym $mod+Control+ü move container to workspace $presentation #FIXME

# Assign workspaces to screens
workspace $workspace1 output HDMI1
workspace $workspace2 output HDMI1
workspace $workspace3 output HDMI1
workspace $workspace4 output HDMI1
workspace $workspace5 output HDMI1

workspace $workspace6 output eDP1
workspace $workspace7 output eDP1
workspace $workspace8 output eDP1
workspace $workspace9 output eDP1
workspace $workspace0 output eDP1

#workspace $presentation output VGA1 #FIXME

# Assign programs to workspaces
#assign [class="chromium"]  $workspace1
assign [class="Skype"]       $workspace8
assign [title="Signal"]      $workspace8
assign [class="TeamSpeak 3"] $workspace8
#assign [class="Steam"]     $workspace9
assign [class="Spotify"] $workspace0

for_window [class="Steam"] floating enable
#for_window [class="Skype"] floating enable
for_window [class="FLTK"] floating enable


# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e mode "Exit?"
mode "Exit?" {
	bindsym Return exit
	bindsym Escape mode "default"
}

#Shutdown
bindsym $mod+Shift+q mode "Shutdown?"
mode "Shutdown?" {
	bindsym Return exec --no-startup-id poweroff
	bindsym Escape mode "default"
}

#Suspend to RAM TODO make automatic
bindsym $mod+Shift+s mode "Suspend?" 
mode "Suspend?" {
	bindsym Return exec $helper/i3lockdpms.sh $($helper/pick-wallpaper.sh), exec --no-startup-id systemctl suspend
	bindsym Escape mode "default", restart
}

#Lock
bindsym $mod+Shift+w exec --no-startup-id sleep 1; exec $helper/i3lockdpms.sh $($helper/pick-wallpaper.sh)

# Colors
# f0544c
set $orange #bf3807 
set $or_bri #fc5519
set $or_drk #8c2905
set $gr_drk #191919
set $gr_med #333333
set $gr_bri #888888
set $re_drk #bf0505

# class                 border  backgr. text    indicator   child_border
client.focused          $or_drk $orange #f5f5f5 $orange     $orange 
client.focused_inactive $gr_drk $gr_med #f5f5f5 $gr_med     $gr_med
client.unfocused        #111111 $gr_drk $gr_bri $gr_drk     $gr_drk
client.urgent           #5e0000 #900000 #f5f5f5 #900000     #900000
client.placeholder      #000000 #0c0c0c #f5f5f5 #000000     #0c0c0c 

# resize window (you can also use the mouse for that)
# Pressing left will shrink the window’s width.
# Pressing right will grow the window’s width.
# Pressing up will grow the window’s height.
# Pressing down will shrink the window’s height.
bindsym $mod+Control+h resize shrink width 10 px or 10 ppt
bindsym $mod+Control+k resize grow height 10 px or 10 ppt
bindsym $mod+Control+j resize shrink height 10 px or 10 ppt
bindsym $mod+Control+l resize grow width 10 px or 10 ppt

# same bindings, but for the arrow keys
bindsym $mod+Control+Left  resize shrink width 10 px or 10 ppt
bindsym $mod+Control+Up    resize grow height 10 px or 10 ppt
bindsym $mod+Control+Down  resize shrink height 10 px or 10 ppt
bindsym $mod+Control+Right resize grow width 10 px or 10 ppt

# Start i3bar to display a workspace bar
bar {
        status_command i3blocks -c ~/.config/i3/i3blocks.conf 
        separator_symbol ""
        tray_padding 4
	font pango:Droid Sans Mono, FontAwesome 11

	colors {
        	background $gr_drk
        	statusline #888888
        	separator $orange
		
		    #class             border  backgrd text
        	focused_workspace  $orange $orange #f5f5f5
        	active_workspace   $gr_med $gr_med #f5f5f5
        	inactive_workspace $gr_drk $gr_drk #888888
        	urgent_workspace   $gr_drk $gr_drk $or_bri
        	binding_mode       $gr_drk $orange #f5f5f5
    	}
}

#KEY-BINDINGS

#Set screen brightness
bindsym XF86MonBrightnessUp   exec --no-startup-id                     xbacklight     +10%
bindsym XF86MonBrightnessDown exec --no-startup-id $helper/dimbacklight.sh 10

#Audio control
bindsym XF86AudioRaiseVolume exec --no-startup-id $helper/volume-up.sh

bindsym XF86AudioLowerVolume exec --no-startup-id $helper/volume-down.sh
bindsym XF86AudioMute        exec --no-startup-id $helper/volume-mute.sh

#Musicplayer control
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause 
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

#Take screenshot
bindsym Print exec scrot ~/screenshots/%F_%H%M%S.png -e 'feh -. -A "gimp %f" $f' 
bindsym Shift+Print exec scrot -u ~/screenshots/%F_%H%M%S.png -e 'feh -. -A "gimp %f" $f' 


#Program shortcuts

# start rofi (a program launcher)
bindsym $mod+d exec --no-startup-id rofi -show run
bindsym $mod+Shift+d exec --no-startup-id rofi-pass

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal -cd "$(xcwd)"
bindsym $mod+Shift+Return exec i3-sensible-terminal

#Browser
bindsym XF86HomePage exec --no-startup-id chromium #chromium
bindsym $mod+b       exec --no-startup-id chromium #chromium

#STARTUP

exec_always --no-startup-id $helper/toggle-clone.sh
exec_always --no-startup-id sudo $helper/apstarter.sh
exec_always --no-startup-id $helper/app-on-ws-init.py --workspace $workspace2 --command i3-sensible-terminal
exec_always --no-startup-id $helper/app-on-ws-init.py --workspace $workspace0 --command spotify
exec        --no-startup-id devmon --info-on-mount
exec        --no-startup-id xflux -l 49.0 -g 8.4
exec        --no-startup-id compton -f
exec        --no-startup-id xset dpms 0 0 0
exec        --no-startup-id xset s off


