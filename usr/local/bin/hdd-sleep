#!/bin/sh

if [ "$(whoami)" != "root" ]; then
    echo "Must be run with root!"
    exit 1
fi


if [ "$1" == "off" ]; then
    /usr/bin/hdparm -B 128 /dev/sda
    exit 0
fi

if [ "$1" == "on" ]; then
    /usr/bin/hdparm -B 127 /dev/sda
    exit 0
fi

echo "Expected one argument (Either \"on\" or \"off\")."
exit 1
