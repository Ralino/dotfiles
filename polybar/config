[colors]
black   = #282828
dgrey   = #928374
dred    = #cc241d
red     = #fb4934
dgreen  = #98971a
green   = #b8bb26
dyellow = #d65d0e
yellow  = #fe8019
dblue   = #458588
blue    = #83a598
dmagenta= #b16286
magenta = #d3869b
dcyan   = #689d6a
cyan    = #8ec07c
lgrey   = #a89984
white   = #ebdbb2

bg      = #282828
fg      = #ebdbb2
fg0     = #fbf1c7
fg2     = #d5c4a1
bg2     = #504945
dorange = #d65d0e
orange  = #fe8019

[bar/base]

width = 100%
weight = 21
bottom = true
fixed-center = true

background = ${colors.bg}
foreground = ${colors.fg}

line-size = 4

padding-left = 1
padding-right = 1

module-margin = 2

font-0 = Fira Sans:fontformat=truetype:size=10;0
font-1 = Font Awesome:fontformat=truetype:size=8;-2

[bar/primary]
monitor = ${env:MONITOR:HDMI1}
monitor-fallback = ${env:MONITOR:eDP1}

modules-left = i3
modules-center = music date
modules-right = volume memory cpu wlan eth battery

tray-position = right
tray-padding = 3

inherit = bar/base

[bar/secondary]
monitor = ${env:MONITOR:eDP1}

modules-left = i3
modules-center = music date

inherit = bar/base

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
enable-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = ${colors.fg0}
label-mode-background = ${colors.dorange}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.bg2}
label-focused-underline = ${colors.dorange}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${colors.dgrey}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-underline = ${colors.dred}
label-urgent-padding = 2

[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume>
format-volume-underline = ${colors.bg2}

label-headphones = %percentage%%
label-headphones-foreground = ${colors.fg}

label-volume = %percentage%%
label-volume-foreground = ${self.label-headphones-foreground}

ramp-volume-0 = ""
ramp-volume-1 = ""
ramp-volume-2 = ""
ramp-volume-foreground = ${colors.dorange}

ramp-headphones-0 = ""
ramp-headphones-1 = ""

format-muted-prefix = ""
format-muted-foreground = ${self.ramp-volume-foreground}
format-muted-underline = ${self.format-volume-underline}
label-muted = muted
label-muted-foreground = ${self.label-headphones-foreground}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.dorange}
format-underline = ${colors.bg2}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.dorange}
format-underline = ${colors.bg2}
label = %percentage_used%%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

format-mounted-prefix = " "
format-mounted-prefix-foreground = ${colors.dorange}
format-mounted-underline = ${colors.bg2}
label-mounted = %free%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${colors.bg2}
label-connected = %essid%

format-disconnected = <label-disconnected>
format-disconnected-prefix = " "
format-disconnected-prefix-foreground = ${colors.dorange}
format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = down

ramp-signal-0 = " "
ramp-signal-1 = " "
ramp-signal-2 = " "
ramp-signal-3 = " "
ramp-signal-4 = " "
ramp-signal-foreground = ${self.format-disconnected-prefix-foreground}

[module/eth]
type = internal/network
interface = enp4s0f2
interval = 3.0

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.dorange}
format-connected-underline = ${colors.bg2}
label-connected = %local_ip%

format-disconnected =

[module/date]
type = internal/date
interval = 1

date = "%d.%m.%Y"
time = %H:%M:%S

label = %date% %time%

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.bg2}

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = " "
format-full-prefix-foreground = ${colors.dorange}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = "  "
ramp-capacity-1 = "  "
ramp-capacity-2 = "  "
ramp-capacity-3 = "  "
ramp-capacity-4 = "  "
ramp-capacity-foreground = ${self.format-full-prefix-foreground}

animation-charging-0 = "  "
animation-charging-1 = "  "
animation-charging-2 = "  "
animation-charging-3 = "  "
animation-charging-4 = "  "
animation-charging-foreground = ${self.format-full-prefix-foreground}
animation-charging-framerate = 750

[module/music]
;TODO use dbus for this
type = custom/script
interval = 1
label = %output%
exec = ~/.config/polybar/scripts/mpris.sh

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

